import java.util.Scanner;
public class room {
    //returns the amount of health after the room
    public static int dungeonRoom(int health) {

    //Scanner Set up
        Scanner scn = new Scanner(System.in);
        int DHP = 150;


        while (health > 0) {

            int roll = (int) (Math.random() * 20);
            String attack;
            int damage = 0;

            if (roll < 9) {
                attack = "Bite";
            } else if (roll < 14) {
                attack = "Claw";
            } else if (roll < 17) {
                attack = "Tail whip";
            } else {
                attack = "Fireball";
            }

            switch (attack) {
                case "Bite":
                    damage = 8;
                    break;
                case "Claw":
                    damage = 10;
                    break;
                case "Tail whip":
                    damage = 7;
                    break;
                case "Fireball":
                    damage = 17;
                    break;
            }
            health -= damage;

            System.out.println("The dragon used " + attack + " doing " + damage + " damage.");
        }
        return health;
    }
    public static void main(String[] args) {
        dungeonRoom(1000);
    }
}
