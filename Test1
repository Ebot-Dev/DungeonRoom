import java.util.Scanner;
public class room {
    //returns the amount of health after the room
    public static int dungeonRoom(int health) {

    //Scanner Set up
        Scanner scn = new Scanner(System.in);
        if (health < 15) {
                System.out.println("You are to weak");
                System.out.println("Luckily the dragon's blessing recovers your health to 50");
                System.out.println("Hope now you make it out alive");
                health = 50;
            }
            else if (health > 100) {
                System.out.println("You are to strong");
                System.out.println("You now have 50 HP");
                health = 50;
            }
            else {
                System.out.println("Start fighting");
            }

            System.out.println("ur hp is" + health);
        int DHP = 150;


        while (health > 0) {

            int roll = (int) (Math.random() * 20);
            String attack;
            int damage = 0;

            if (roll < 9) {
                attack = "Bite";
            } else if (roll < 14) {
                attack = "Claw";
            } else if (roll < 17) {
                attack = "Tail whip";
            } else {
                attack = "Fireball";
            }

            switch (attack) {
                case "Bite":
                    damage = 8;
                    break;
                case "Claw":
                    damage = 10;
                    break;
                case "Tail whip":
                    damage = 7;
                    break;
                case "Fireball":
                    damage = 17;
                    break;
            }
            health -= damage;

            System.out.println("The dragon used " + attack + " doing " + damage + " damage.");
        }

        int rounds = scn.nextInt();
                    int health = 50;
                    int mana = 10; // Initial mana
                    int spellCost = 2;
                    int spellDamage = 1;
                    int rounds = 10; // Number of rounds

                    for (int i = 1; i <= rounds; i++) {
                        if (mana >= spellCost) {
                            health -= spellDamage;
                            mana -= spellCost;
                            System.out.println("Round " + i + ": Cast spell, HP: " + health + ", Mana: " + mana);
                        } else {
                            System.out.println("Round " + i + ": Not enough mana to cast spell, HP: " + health + ", Mana: " + mana);
                        }
                        mana += 1; // Gain 1 mana after each round
                    }


        return health;
    }
    public static void main(String[] args) {
        dungeonRoom(1000);
    }
}
